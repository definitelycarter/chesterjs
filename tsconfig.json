{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "composite": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "sourceMap": true
  }
}
